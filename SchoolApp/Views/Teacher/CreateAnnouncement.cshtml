@model SchoolApp.Models.Announcement
@{
    ViewData["Title"] = "Announcement";
}
<form method="post" asp-action="CreateAnnouncement">
    <fieldset>
        <legend>Announcement Form</legend>
        <div class="form-group row">
            <label asp-for="AnnouncementTitle" class="col-sm-2 col-form-label">Announcement</label>
            <div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AnnouncementTitle" class="form-label mt-4">Announcement Title</label>
            <input asp-for="AnnouncementTitle" type="text" class="form-control" placeholder="Enter Announcement Title">
            <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AnnouncementDescription" class="form-label mt-4">Announcement Description</label>
            <textarea asp-for="AnnouncementDescription" class="form-control" id="exampleTextarea" rows="4"></textarea>
            <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>

        </div>

        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.LabelFor(model => model.StartDate)
            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", type = "date" })
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.LabelFor(model => model.EndDate)
            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", type = "date" })
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>


